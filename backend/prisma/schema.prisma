// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId      String  @id @default(uuid())
  email       String  @unique
  password    String
  firstName   String
  lastName    String
  phoneNumber String
  nic         String
  address     String?
  stationId   String?
  role        Role    @default(PASSENGER)
}

enum Role {
  ADMIN
  PASSENGER
  CONTROL_OFFICER
  TICKETING_OFFICER
  TICKET_CHECKER
}

model Station {
  stationId    String    @id
  name         String
  address      String
  phoneNumber  String
  routeCode    String
  location     String
  adjacentTo   Station[] @relation("AdjacentStations")
  adjacentFrom Station[] @relation("AdjacentStations")
}
